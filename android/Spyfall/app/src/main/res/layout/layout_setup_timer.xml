<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/content_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                tools:context="com.iantmeyer.spyfall.fragment.setup.SetupFragment"
                tools:showIn="@layout/activity_main">

    <ImageView
        android:id="@+id/timer_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_timer"/>

    <TextView
        android:id="@+id/timer_time"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/timer_icon"
        android:gravity="center"
        android:text="01:00"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/timer_plus"
        android:layout_width="40dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/timer_time"
        android:gravity="center"
        android:padding="0dp"
        android:text="+"
        android:textSize="22sp"/>

    <Button
        android:id="@+id/timer_minus"
        android:layout_width="40dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="4dp"
        android:layout_toEndOf="@+id/timer_plus"
        android:gravity="center"
        android:padding="0dp"
        android:text="-"
        android:textSize="22sp"/>

</RelativeLayout>